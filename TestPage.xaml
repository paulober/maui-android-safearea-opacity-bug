<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.TestPage"
             BackgroundColor="Transparent">
    
    <!-- 
    ===============================================================================
    SafeAreaRegions Test Page
    ===============================================================================
    
    ISSUE: Testing if SafeAreaRegions.Container respects camera notch/cutout
    
    Expected: Badge should be positioned BELOW the camera notch
    Actual on Android: Badge is positioned UNDER the camera notch (overlapping)
    
    ===============================================================================
    -->
    
    <Grid SafeAreaEdges="None" RowDefinitions="*" ColumnDefinitions="*">
        
        <!-- Backdrop -->
        <Grid SafeAreaEdges="None" Grid.Row="0" Grid.Column="0">
            <BoxView BackgroundColor="Black" Opacity="0.7" />
        </Grid>
        
        <!-- Content Layer - SafeAreaEdges set in code-behind -->
        <Grid x:Name="ContentLayer"
              Grid.Row="0" 
              Grid.Column="0">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackdropTapped"/>
            </Grid.GestureRecognizers>
            
            <!-- Test Badge at Top -->
            <Border x:Name="TestBadge"
                    BackgroundColor="Orange"
                    StrokeThickness="2"
                    Stroke="White"
                    Padding="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Margin="20"
                    Rotation="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.4" Radius="16" Offset="0,8"/>
                </Border.Shadow>
                
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="TitleLabel"
                           Text="SafeAreaRegions Test"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalTextAlignment="Center"/>
                    
                    <Label x:Name="DescriptionLabel"
                           Text="Testing..."
                           FontSize="14"
                           TextColor="White"
                           HorizontalTextAlignment="Center"/>
                    
                    <BoxView Color="White"
                             HeightRequest="100"
                             WidthRequest="200"
                             HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
            
            <!-- Close Button -->
            <Button Text="Close"
                    BackgroundColor="Gray"
                    Clicked="OnCloseClicked"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Margin="20"/>
        </Grid>
    </Grid>

</ContentPage>
